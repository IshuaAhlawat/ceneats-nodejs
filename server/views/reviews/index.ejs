<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <a class="btn btn-primary" href="/review-list/add" role="button">
                <i class="fas fa-plus-circle"></i> Add an review</a>
            <br>
            <div class="form">
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Index</th>
                        <th class="text-center">Display Name</th>
                        <th class="text-center">Restaurant Name</th>
                        <th class="text-center">comment</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < reviewList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= (count+1) %></td>
                        <td class="text-center"><%= reviewList[count].displayName %></td>
                        <td class="text-center"><%= reviewList[count].restaurantName %></td>
                        <td class="text-center"><%= reviewList[count].comment %></td>

                        <td class="text-center">
                            <a href="/item-list/placeorder/<%= reviewList[count]._id %>" class="btn btn-success"><i
                                    class="fas fa-utensils"></i> Order</a>
                        </td>

                        <td class="text-center">
                            <a href="/item-list/edit/<%= reviewList[count]._id %>" class="btn btn-primary"><i
                                    class="fas fa-pencil-alt"></i> Edit</a>
                        </td>

                        <td class="text-center">
                            <a href="/item-list/delete/<%= reviewList[count]._id %>" class="btn btn-danger"><i
                                    class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </table>
                <a href="/review-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>