<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>
        <%= title %>
    </title>
    <!-- CSS Section-->
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/@fortawesome/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="/Content/app.css" />
    <style>
        .flex-container {
            display: flex;
            flex-direction: row;
        }
        
        .flex-container>.card {
            margin: 50px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Centennial Eats</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <% if(title == "Home") { %>
                    <li class="nav-item active">
                        <% } else { %>
                    </li>
                    <li class="nav-item">
                        <% } %>
                            <a class="nav-link" href="/"><i class="fas fa-lg fa-hamburger"></i> Home
                        <span class="sr-only">(current)</span></a>
                    </li>

                    <% if(title == "Order List") { %>
                        <li class="nav-item active">
                            <% } else { %>
                        </li>
                        <li class="nav-item">
                            <% } %>
                                <a class="nav-link" href="/order-list"><i class="fa fa-lg fa-briefcase"></i> View Orders</a>
                        </li>

                        <% if(title == "Services") { %>
                            <li class="nav-item active">
                                <% } else { %>
                            </li>

                            <li class="nav-item">
                                <% } %>

                                    <a class="nav-link" href="/review-list"><i class="fa fa-lg fa-birthday-cake"></i> Reviews</a>
                            </li>

                            <% if(title == "Contact") { %>
                                <li class="nav-item active">
                                    <% } else { %>
                                </li>

                                <li class="nav-item">
                                    <% } %>

                                        <a class="nav-link" href="/contact"><i class="fa fa-lg fa-phone"></i> Contact</a>
                                </li>

                                <% if(title == "About") { %>
                                    <li class="nav-item active">
                                        <% } else { %>
                                    </li>

                                    <li class="nav-item">
                                        <% } %>

                                            <a class="nav-link" href="/about"><i class="fa fa-lg fa-info"></i> About</a>
                                    </li>

                                    <% if(typeof displayName == 'string' && displayName) { %>
                                        <li class="navbar-text"><i class="fas fa-lg fa-user"></i> Welcome,
                                            <%= displayName %>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/logout" class="nav-link">
                                                <i class="fas fa-lg fa-sign-out-alt"></i> Logout</a>
                                        </li>
                                        <% } else { %>
                                            <li class="nav-item">
                                                <a href="/login" class="nav-link">
                                                    <i class="fas fa-lg fa-sign-in-alt"></i> Login</a>
                                            </li>
                                            <% } %>
            </ul>
        </div>
    </nav>