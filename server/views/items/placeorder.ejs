<% include ../partials/header.ejs %>

<!-- Content for the Place Order Page -->
<div class="background_form"></div>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6" id="centerForm_B">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="cenid">Centennial Id:</label>
                    <input type="text" class="form-control" name="cenid" placeholder="Enter Centennial Id" id="cenid"
                        readonly required autocomplete="off" value="<%= cenid %>">
                </div>

                <div class="form-group">
                    <label for="foodid">itemId:</label>
                    <input type="text" class="form-control" name="foodid" placeholder="Enter Item Id" id="foodid"
                        readonly required autocomplete="off" value="<%= item.itemId %>">
                </div>

                <div class="form-group">
                    <label for="resName">restaurantName:</label>
                    <input type="text" class="form-control" name="resName" placeholder="Enter RestaurantName"
                        id="resName" readonly autocomplete="off" value="<%= item.restaurantName %>">
                </div>

                <div class="form-group">
                    <label for="itemName">itemName:</label>
                    <input type="text" class="form-control" name="itemName" placeholder="Enter Item Name" id="itemName"
                        readonly autocomplete="off" value="<%= item.itemName %>">
                </div>

                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"
                        class="form-control currency" name="price" placeholder="Enter price" id="price" readonly
                        autocomplete="off" value="<%= item.price %>">
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" class="form-control" name="quantity" id="quantity" required autocomplete="off"
                        min="1" max="<%= item.quantity %>" value="1">
                </div>

                <button type="submit" class="btn btn-primary" style="margin-bottom: 10px;">
                    <i class="fas fa-edit"></i> Place Order</button>
                <a href="/item-list" class="btn btn-warning" style="margin-bottom: 10px;">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>


        </div>
    </div>
</div>





<% include ../partials/footer.ejs %>